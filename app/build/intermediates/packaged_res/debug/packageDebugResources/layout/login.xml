<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_shape">


    <!-- Main Frame -->
    <FrameLayout
        android:layout_width="768.62dp"
        android:layout_height="1167.93dp"
        android:layout_marginLeft="-164dp"
        android:layout_marginTop="-146dp"
        android:layout_gravity="top|left">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/rectangle_2" />

        <ImageView
            android:layout_width="639dp"
            android:layout_height="390dp"
            android:layout_marginLeft="51.14dp"
            android:layout_marginTop="48.44dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/rectangle_1" />

        <ImageView
            android:layout_width="588.86dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="67.14dp"
            android:layout_marginTop="748.44dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rectangle_3" />

        <ImageView
            android:layout_width="299dp"
            android:layout_height="299dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="289dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/beige" />
    </FrameLayout>

    <!-- Register Form -->
    <FrameLayout
        android:layout_width="326.22dp"
        android:layout_height="258.41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="354dp"
        android:layout_gravity="top|left"
        android:background="@drawable/drawable_shape_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59.29dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Login"
            android:textColor="#FFFFB041"
            android:textSize="36dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="64.45dp"
            android:layout_gravity="top"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Email"
            android:textColor="#FFFFB041"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/email_input"
            android:inputType="textEmailAddress"
            android:layout_width="298.23dp"
            android:layout_height="35.4dp"
            android:layout_marginTop="84.07dp"
            android:layout_gravity="top|left"
            android:background="@drawable/drawable_shape_2"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="131.71dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Password"
            android:textColor="#FFFFB041"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/password_input"
            android:inputType="textPassword"
            android:layout_width="298.23dp"
            android:layout_height="35.4dp"
            android:layout_marginTop="151.33dp"
            android:background="@drawable/drawable_shape_4"
            android:scaleType="centerCrop" />




    </FrameLayout>

    <!-- Register Button at Bottom-Right -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFD580"
            android:gravity="center"
            android:onClick="onLoginButtonClick"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="24dp" />
    </FrameLayout>

    <!-- Login Text -->
    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="20dp"
        android:backgroundTint="#FFD580"
        android:gravity="left|center_vertical"
        android:onClick="onSignupButtonClick"
        android:text="Don't have an account? Signup"
        android:textColor="#000"
        android:textSize="14dp" />
</FrameLayout>
